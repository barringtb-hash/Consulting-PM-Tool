# API service environment variables (place in pmo/apps/api/.env during local dev)

# Database configuration
# DATABASE_PROVIDER defaults to 'sqlite' for test runs. Set DATABASE_PROVIDER="postgresql"
# and POSTGRES_TEST_ADMIN_URL to opt into PostgreSQL locally or in CI.
DATABASE_PROVIDER="sqlite"

# PostgreSQL connection string (default)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/postgres"

# SQLite database path used by Prisma (relative to the monorepo root) when DATABASE_PROVIDER=sqlite
# DATABASE_URL="file:./dev.db"

# Auth and security
JWT_SECRET="replace-with-a-long-random-secret"
JWT_EXPIRES_IN="1h"
BCRYPT_SALT_ROUNDS=10

# Server configuration
PORT=4000
NODE_ENV="development"
