# API service environment variables (place in pmo/apps/api/.env during local dev)

# SQLite database path used by Prisma (relative to the monorepo root)
DATABASE_URL="file:./dev.db"
DATABASE_PROVIDER="sqlite"

# Auth and security
JWT_SECRET="replace-with-a-long-random-secret"
JWT_EXPIRES_IN="1h"
BCRYPT_SALT_ROUNDS=10

# Server configuration
PORT=4000
NODE_ENV="development"
