{
  "name": "pmo-api",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build:with-migrate": "npm run build && npm run db:migrate",
    "build:production": "npm run build",
    "start": "node dist/apps/api/src/index.js",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest run",
    "create-user": "ts-node scripts/create-user.ts",
    "db:migrate": "prisma migrate deploy --schema ../../prisma/schema.prisma",
    "db:seed": "prisma db seed",
    "db:setup": "prisma migrate deploy --schema ../../prisma/schema.prisma && prisma db seed",
    "prisma:migrate": "prisma migrate deploy --schema ../../prisma/schema.prisma",
    "prisma:migrate:deploy": "bash ../../scripts/deploy-migrations.sh",
    "prisma:seed": "prisma db seed"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "bcryptjs": "^3.0.3",
    "bullmq": "^5.34.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.0.0",
    "express": "^5.0.0",
    "ioredis": "^5.4.2",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.13.0",
    "prisma": "^7.0.0",
    "socket.io": "^4.8.1",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.0",
    "@types/pg": "^8.11.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.15.0",
    "supertest": "^7.1.4",
    "tsx": "^4.21.0",
    "vitest": "^4.0.9"
  },
  "prisma": {
    "schema": "../../prisma/schema.prisma"
  }
}
