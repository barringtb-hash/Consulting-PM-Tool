{
  "name": "ai-consulting-pmo-monorepo",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint \"apps/**/src/**/*.{ts,tsx}\" --max-warnings=0 --no-error-on-unmatched-pattern",
    "test": "echo \"No tests configured\"",
    "build": "echo \"No build configured\"",
    "format": "prettier \"**/*.{ts,tsx,js,jsx,json,md}\" --write",
    "prepare": "node ./scripts/install-husky.mjs"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "prettier --write"
    ],
    "apps/**/src/**/*.{ts,tsx}": [
      "eslint --max-warnings=0 --no-error-on-unmatched-pattern"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "typescript-eslint": "^8.46.4",
    "eslint": "^9.39.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.12.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}
