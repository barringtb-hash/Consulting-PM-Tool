{
  "name": "@pmo/shared-types",
  "version": "1.0.0",
  "description": "Shared TypeScript types for PMO platform frontend and backend",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./crm": {
      "types": "./dist/crm/index.d.ts",
      "import": "./dist/crm/index.mjs",
      "require": "./dist/crm/index.js"
    },
    "./api": {
      "types": "./dist/api/index.d.ts",
      "import": "./dist/api/index.mjs",
      "require": "./dist/api/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "typescript",
    "types",
    "pmo",
    "crm",
    "shared"
  ],
  "author": "PMO Platform",
  "license": "MIT"
}
